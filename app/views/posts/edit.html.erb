<%= form_tag post_path(@post), method: "put" do %>
  
  <%= label_tag('post[title]', "Post Title:") %>
  <%= text_field_tag 'post[title]', @post.title %> 
  <br>
  
  <%= label_tag('post[description]', "Post Description:") %>
  <%= text_field_tag 'post[description]', @post.description %> 
  
  <%= submit_tag "Submit Post" %>

<% end %>
