<h3>Post Form</h3>

<%= form_tag post_path(@post), method: "put" do %>

  <%= label_tag(:title, "Post Title") %>
  <%= text_field_tag :title, @post.title %><br>

  <%= label_tag(:description, "Post Description") %>
  <%= text_field_tag :description, @post.description%><br>

  <%= submit_tag "Submit Post" %>

<% end %>
