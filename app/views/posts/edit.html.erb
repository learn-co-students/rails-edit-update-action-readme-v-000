<h3>Post Form</h3>

<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br />

<%= f.label :description %>
<%= f.text_field :description %><br />

<%= f.submit "Submit Post"%>
<% end %>



